{
	"name": "static-site-boilerplate-vite",
	"private": true,
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"prepare": "npx simple-git-hooks",
		"start": "vite --host",
		"build": "vite build --emptyOutDir && prettier --write dist/**/*.html",
		"preview": "vite preview",
		"lint": "run-p lint:*",
		"lint:eslint": "eslint \"src/**/*.js\"",
		"lint:stylelint": "stylelint \"src/**/*.{css,scss}\"",
		"lint:prettier": "prettier --check src",
		"fix": "run-s fix:{eslint,stylelint,prettier}",
		"fix:eslint": "npm run lint:eslint -- --fix",
		"fix:stylelint": "npm run lint:stylelint -- --fix",
		"fix:prettier": "prettier --write src"
	},
	"devDependencies": {
		"autoprefixer": "^10.4.19",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-css-import-order": "^1.1.0",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-unused-imports": "^3.1.0",
		"lint-staged": "^15.2.2",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.38",
		"postcss-sort-media-queries": "^5.2.0",
		"prettier": "^3.2.5",
		"sass": "^1.72.0",
		"simple-git-hooks": "^2.11.0",
		"stylelint": "^16.3.0",
		"stylelint-config-recess-order": "^5.0.0",
		"stylelint-config-standard-scss": "^13.0.0",
		"vite": "^5.2.5",
		"vite-plugin-handlebars": "^2.0.0",
		"vite-plugin-imagemin": "^0.6.1"
	},
	"dependencies": {
		"destyle.css": "^4.0.1"
	},
	"volta": {
		"node": "20.12.0"
	},
	"lint-staged": {
		"*.js": [
			"eslint --fix --quiet",
			"prettier --write --log-level=error"
		],
		"*.{css,scss}": [
			"stylelint --fix --quiet",
			"prettier --write --log-level=error"
		],
		"*.{html,json,jsonc}": [
			"prettier --write --log-level=error"
		]
	},
	"simple-git-hooks": {
		"pre-commit": "npx lint-staged"
	}
}
