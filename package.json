{
	"name": "static-site-boilerplate-vite",
	"private": true,
	"version": "1.0.0",
	"scripts": {
		"prepare": "npx simple-git-hooks",
		"start": "vite --host",
		"build": "vite build --emptyOutDir && prettier --write dist/**/*.html",
		"preview": "vite preview",
		"lint": "run-p lint:*",
		"lint:eslint": "eslint \"src/**/*.js\"",
		"lint:stylelint": "stylelint \"src/**/*.{css,scss}\"",
		"lint:prettier": "prettier --check src",
		"fix": "run-s fix:eslint fix:stylelint fix:prettier",
		"fix:eslint": "npm run lint:eslint -- --fix",
		"fix:stylelint": "npm run lint:stylelint -- --fix",
		"fix:prettier": "prettier --write src"
	},
	"devDependencies": {
		"autoprefixer": "^10.4.14",
		"eslint": "^8.46.0",
		"eslint-config-prettier": "^8.9.0",
		"eslint-plugin-css-import-order": "^1.1.0",
		"eslint-plugin-import": "^2.28.0",
		"eslint-plugin-unused-imports": "^3.0.0",
		"lint-staged": "^13.2.3",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.27",
		"postcss-sort-media-queries": "^5.2.0",
		"prettier": "^3.0.0",
		"sass": "^1.64.1",
		"simple-git-hooks": "^2.9.0",
		"stylelint": "^15.10.2",
		"stylelint-config-recess-order": "^4.3.0",
		"stylelint-config-standard-scss": "^10.0.0",
		"vite": "^4.4.7",
		"vite-plugin-handlebars": "^1.6.0",
		"vite-plugin-imagemin": "^0.6.1"
	},
	"dependencies": {
		"destyle.css": "^4.0.0"
	},
	"volta": {
		"node": "18.17.0"
	},
	"lint-staged": {
		"**/*.js": [
			"eslint --fix --quiet",
			"prettier --write --log-level=error"
		],
		"**/*.{css,scss}": [
			"stylelint --fix --quiet",
			"prettier --write --log-level=error"
		],
		"**/*.{html,json,jsonc}": [
			"prettier --write --log-level=error"
		]
	},
	"simple-git-hooks": {
		"pre-commit": "npx lint-staged"
	}
}
